{
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "outDir": "./dist",
        "target": "ES5",
        "module": "esNext",
        "lib": ["dom", "es2019"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "useDefineForClassFields": true,
        "sourceMap": true,
        "skipLibCheck": true
    }
}
